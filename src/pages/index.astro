---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { siteConfig } from "../config/site";
import { getAllPosts } from "../lib/notion";

const posts = await getAllPosts();
---

<Layout title={siteConfig.site_title} description={siteConfig.site_description}>
  <section id="content" class="overflow-hidden relative mb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col items-center justify-center gap-2 mt-10 mb-4">
        <div class="flex flex-row items-center justify-center gap-3">
          <span
            class="w-10 h-10 bg-primary text-white rounded-full items-center justify-center text-xl inline-flex"
            >✱</span
          ><h1>{siteConfig.site_title}</h1>
        </div>
      </div>
      <p class="text-center">{siteConfig.site_description}</p>
      <hr class="my-12 border-slate-200" />
      <!-- Hero Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-8 mb-12">
        <!-- Main Featured Post -->
        <div class="lg:col-span-2 mb-8 lg:mb-0">
          {posts.slice(0, 1).map((post) => (
            <a href={`/blog/${post.slug}`} class="group block overflow-hidden rounded-xl">
              <div class="relative">
                {post.cover && (
                  <Image
                    src={post.cover}
                    alt={post.title}
                    width={800}
                    height={450}
                    class="w-full h-auto object-cover aspect-video rounded-xl group-hover:scale-105 transition-transform duration-300"
                  />
                )}
                <div class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-black/70 to-transparent rounded-b-xl"></div>
                <div class="absolute bottom-0 left-0 p-6 text-white">
                  {post.tags && post.tags[0] && (
                    <span class="inline-block bg-primary text-white px-3 py-1 text-xs font-bold uppercase rounded mb-2">{post.tags[0]}</span>
                  )}
                  <h2 class="text-2xl lg:text-3xl font-bold leading-tight group-hover:underline decoration-primary">{post.title}</h2>
                  <p class="mt-2 text-sm text-slate-200 line-clamp-2 hidden sm:block">{post.description}</p>
                </div>
              </div>
            </a>
          ))}
        </div>

        <!-- Side Posts -->
        <div class="space-y-6">
          {posts.slice(1, 3).map((post) => (
            <a href={`/blog/${post.slug}`} class="group block">
              <div class="grid grid-cols-3 gap-4">
                {post.cover && (
                  <div class="col-span-1">
                    <Image
                      src={post.cover}
                      alt={post.title}
                      width={150}
                      height={100}
                      class="w-full h-full object-cover rounded-lg group-hover:opacity-80 transition-opacity"
                    />
                  </div>
                )}
                <div class="col-span-2">
                  {post.tags && post.tags[0] && (
                    <span class="text-xs font-semibold text-primary uppercase">{post.tags[0]}</span>
                  )}
                  <h3 class="text-md font-bold leading-snug text-slate-800 group-hover:underline decoration-primary">{post.title}</h3>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Secondary Posts Grid -->
      <div class="mb-16">
        <div class="flex items-center gap-3 mb-6">
          <span class="w-3 h-3 bg-primary rounded-full"></span>
          <h2 class="text-xl font-bold text-slate-800">เรื่องที่คุณอาจสนใจ</h2>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-8">
          {posts.slice(3, 9).map((post) => (
            <a href={`/blog/${post.slug}`} class="group block">
              <div class="overflow-hidden rounded-xl mb-4">
                {post.cover && (
                  <Image
                    src={post.cover}
                    alt={post.title}
                    width={400}
                    height={225}
                    class="w-full aspect-video object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                )}
              </div>
              <div class="px-1">
                <div class="flex items-center gap-3 text-xs text-slate-500 mb-2">
                  {post.tags && post.tags[0] && <span class="font-bold text-primary uppercase">{post.tags[0]}</span>}
                  <span>•</span>
                  <time>{new Date(post.created).toLocaleString("th-TH", { year: 'numeric', month: 'short', day: 'numeric' })}</time>
                </div>
                <h3 class="text-lg font-bold leading-snug text-slate-800 group-hover:underline">{post.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- All Posts Button -->
      <div class="text-center mt-8">
        <a href="/blog" class="inline-block bg-primary text-white px-8 py-3 rounded-full font-semibold hover:bg-primary/90 transition-colors shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
          บทความทั้งหมด
        </a>
      </div>
    </div>
  </section></Layout
>
