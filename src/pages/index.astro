---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { siteConfig } from "../config/site";
import { getAllPosts } from "../lib/notion";

const posts = await getAllPosts();
---

<Layout title={siteConfig.site_title} description={siteConfig.site_description}>
  <section id="hero" class="overflow-hidden relative mb-16">
    <section id="docs" class="py-8">
      <div class="flex flex-col items-center justify-center gap-2 mt-10 mb-4">
        <div class="flex flex-row items-center justify-center gap-2">
          <span
            class="w-10 h-10 bg-primary text-white rounded-full items-center justify-center text-xl inline-flex"
            >✱</span
          ><h1>{siteConfig.site_title}</h1>
        </div>
      </div>
      <p class="text-center">{siteConfig.site_description}</p>
      <hr class="my-12 border-neutral-200" />

      <!-- Hero Layout with Featured Post and Sidebar -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Featured Post Section (Left - 2 columns) -->
        <div class="md:col-span-2">
          {posts.slice(0, 1).map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group block relative overflow-hidden rounded-lg"
            >
              {post.cover ? (
                <figure class="shrink-0 w-full relative overflow-hidden rounded-lg overflow-hidden h-96">
                  <Image
                    src={post.cover}
                    alt={post.title}
                    width={1200}
                    height={600}
                    class="w-full h-full object-cover group-hover:scale-105 transition-all duration-700 ease-in-out group-hover:brightness-75"
                  />
                </figure>
              ) : null}
              <!-- Overlay Content -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent rounded-lg flex flex-col justify-end p-6">
                <time class="text-xs text-gray-300 mb-2">
                  {new Date(post.created).toLocaleString("th-TH", {
                    dateStyle: "long",
                  })}
                </time>
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
                  {post.title}
                </h2>
                <p class="text-gray-200 line-clamp-2 mb-3">
                  {post.description}
                </p>
                <div class="flex flex-wrap gap-2">
                  {post.tags &&
                    post.tags.slice(0, 3).map((tag: string) => (
                      <span class="inline-block rounded-full bg-primary/80 text-white px-3 py-1 text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                </div>
              </div>
            </a>
          ))}
        </div>

        <!-- Sidebar Highlights (Right - 1 column) -->
        <div class="space-y-4">
          <h3 class="text-xl font-bold mb-4">ไฮไลต์</h3>
          {posts.slice(1, 5).map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group flex gap-3 p-3 rounded-lg border border-neutral-200 hover:shadow-md transition-shadow hover:bg-neutral-50"
            >
              {post.cover ? (
                <figure class="shrink-0 w-20 h-20 relative overflow-hidden rounded">
                  <Image
                    src={post.cover}
                    alt={post.title}
                    width={150}
                    height={150}
                    class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300"
                  />
                </figure>
              ) : null}
              <div class="flex-1 min-w-0">
                <p class="text-xs text-gray-500 mb-1">
                  {new Date(post.created).toLocaleString("th-TH", {
                    dateStyle: "short",
                  })}
                </p>
                <h4 class="text-sm font-semibold text-gray-900 line-clamp-2 group-hover:text-primary transition-colors">
                  {post.title}
                </h4>
                <div class="flex gap-1 mt-1 flex-wrap">
                  {post.tags &&
                    post.tags.slice(0, 2).map((tag: string) => (
                      <span class="text-xs text-gray-600 bg-gray-100 rounded px-2 py-0.5">
                        {tag}
                      </span>
                    ))}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <hr class="my-12 border-neutral-200" />

      <!-- Latest Posts Section (Simple Grid) -->
      <div class="mb-16">
        <div class="flex flex-row items-center justify-start gap-2 mb-8">
          <span
            class="w-10 h-10 bg-primary text-white rounded-full items-center justify-center text-xl inline-flex"
            >⭐</span
          ><h2 class="text-2xl font-bold">โพสต์ล่าสุด</h2>
        </div>
        <div class="article grid md:grid-cols-3 gap-6">
          {
            posts.slice(0, 6).map((post) => (
              <a
                href={`/blog/${post.slug}`}
                class="group flex flex-col gap-4 p-0 justify-start items-center rounded-lg overflow-hidden border border-neutral-200 hover:shadow-lg transition-shadow"
              >
                {post.cover ? (
                  <figure class="shrink-0 w-full relative overflow-hidden">
                    <Image
                      src={post.cover}
                      alt={post.title}
                      width={800}
                      height={400}
                      class="aspect-video object-cover group-hover:scale-105 transition-all duration-700 ease-in-out group-hover:brightness-90"
                    />
                  </figure>
                ) : null}
                <div class="relative overflow-hidden px-4">
                  <time class="text-xs text-gray-500">
                    {new Date(post.created).toLocaleString("th-TH", {
                      dateStyle: "long",
                    })}
                  </time>
                  <h3 class="text-lg font-semibold text-primary md:text-xl leading-tight mt-2">
                    {post.title}
                  </h3>
                  <p class="mt-2 text-gray-600 line-clamp-3">
                    {post.description}
                  </p>
                  <div class="my-4 flex flex-row items-center justify-start flex-wrap gap-2">
                    {post.tags &&
                      post.tags.map((tag: string) => (
                        <span
                          class="inline-block rounded-full bg-gray-200 px-2 py-1 text-xs text-gray-700"
                        >
                          {tag}
                        </span>
                      ))}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </section></Layout
>
